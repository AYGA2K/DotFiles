live_config_reload: true

window:
  opacity: 1
  padding:
    x: 10
    y: 10
  #dynamic_padding: false
#decorations: buttonless
font:
  offset:
    x: 0
    y: 0
  normal:
    family: "JetBrainsMono Nerd Font Mono"
    #style: bold
  size: 15
  #use_thin_strokes: true
colors:
  # Default colors
  primary:
    background: '#0A0E14'
    foreground: '#B3B1AD'

  # Normal colors
  normal:
    black: '#01060E'
    red: '#EA6C73'
    green: '#91B362'
    yellow: '#F9AF4F'
    blue: '#53BDFA'
    magenta: '#FAE994'
    cyan: '#90E1C6'
    white: '#C7C7C7'

  # Bright colors
  bright:
    black: '#686868'
    red: '#F07178'
    green: '#C2D94C'
    yellow: '#FFB454'
    blue: '#59C2FF'
    magenta: '#FFEE99'
    cyan: '#95E6CB'
    white: '#FFFFFF'
theme: Ayu-Dark

mouse:
  hide_when_typing: true
